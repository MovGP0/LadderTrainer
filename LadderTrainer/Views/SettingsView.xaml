<?xml version="1.0" encoding="utf-8" ?>
<reactive:ReactiveContentView
    x:Class="LadderTrainer.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:reactive="clr-namespace:ReactiveUI.Maui;assembly=ReactiveUI.Maui"
    xmlns:ladderTrainer="clr-namespace:LadderTrainer"
    x:TypeArguments="ladderTrainer:LadderSessionViewModel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               Text="Target repetitions:"
               VerticalOptions="Center" />

        <Entry x:Name="TargetEntry"
               Grid.Column="1"
               Keyboard="Numeric"
               HorizontalOptions="Fill"
               Margin="8,0" />

        <Button x:Name="StartButton"
                Grid.Column="2"
                Text="Start"
                Margin="12,0,0,0" />
    </Grid>
</reactive:ReactiveContentView>
