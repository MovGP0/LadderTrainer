<?xml version="1.0" encoding="utf-8" ?>
<reactive:ReactiveContentView
    x:Class="LadderTrainer.Views.StatisticsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:reactive="clr-namespace:ReactiveUI.Maui;assembly=ReactiveUI.Maui"
    xmlns:ladderTrainer="clr-namespace:LadderTrainer"
    x:TypeArguments="ladderTrainer:LadderSessionViewModel">

    <VerticalStackLayout Spacing="8">

        <Label Text="Statistics"
               FontAttributes="Bold"
               FontSize="18" />

        <HorizontalStackLayout Spacing="16">
            <VerticalStackLayout>
                <Label Text="Target" FontAttributes="Bold" />
                <Label x:Name="TargetLabel" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Completed" FontAttributes="Bold" />
                <Label x:Name="CompletedLabel" />
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <Label Text="Total time" FontAttributes="Bold" />
        <Label x:Name="TotalTimeLabel" />

    </VerticalStackLayout>
</reactive:ReactiveContentView>