<?xml version="1.0" encoding="utf-8" ?>
<reactive:ReactiveContentPage
    x:Class="LadderTrainer.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:reactive="clr-namespace:ReactiveUI.Maui;assembly=ReactiveUI.Maui"
    xmlns:ladderTrainer="clr-namespace:LadderTrainer"
    xmlns:views="clr-namespace:LadderTrainer.Views"
    x:TypeArguments="ladderTrainer:LadderSessionViewModel"
    Title="Ladder Training">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Settings -->
            <views:SettingsView x:Name="SettingsView" />

            <!-- Workout -->
            <views:WorkoutView x:Name="WorkoutView" />

            <!-- Pause -->
            <views:PauseView x:Name="PauseView" />

            <!-- Statistics -->
            <views:StatisticsView x:Name="StatisticsView" />

        </VerticalStackLayout>
    </ScrollView>
</reactive:ReactiveContentPage>